{
    "compilerOptions": {
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noEmitOnError": true,
        "noImplicitAny": false,
        "noFallthroughCasesInSwitch": true,
        "sourceMap": true,
        "inlineSourceMap": false,
        "inlineSources": true,
        "stripInternal": true,
        "lib": [
            "es6",
            "es2015",
            "dom"
        ],
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "target": "es5",
        "types": ["node"],
        "typeRoots": [
            "../../../node_modules/@types"
        ]
    }
}